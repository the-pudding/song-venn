.intro
	margin 0 auto
	padding 8rem 0rem 0rem 0rem
	.opening-chart
		margin-bottom 1rem
		min-height 300px
		svg
			margin-bottom 1rem

	.hed
		font-family $signifier
		font-size 94px
		padding-top 5rem
		color #291a03
		max-width 900px
		width 95%
		color #270d03
		@media (max-width: 550px)
			font-size 64px
		@media (max-width: 390px)
			font-size 55px
	.byline-wrapper
		display flex
		flex-wrap wrap
		justify-content center
		margin-bottom 3rem
		.intro__time
			font-weight 600
			margin 0
			margin-right 1.5rem
			font-family $atlas
			font-size 12px
		@media (max-width: 425px)
			.intro__time
				margin 0 auto
				width 95%
				margin-bottom 1rem

		.intro__byline
			margin 0
			font-family $atlas
			font-size 12px
			font-weight 400
			a
				font-weight 400
	.intro__hed
		max-width 60rem
		margin 0 auto
		text-align center
		font-family $signifier
		font-size 28px
		line-height 1.5
		max-width 500px
		width 95%
		color #402a07
		.sound-icon-span
			display inline-block
			padding-right 0
			margin-right 10px
			width 20px
			svg
				width 100%
				height 13px
				margin-left 5px

	&__dek
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center

	&__byline
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center


	&__time
		display block
		max-width $column-width
		margin 1rem auto 3rem auto
		text-align center

.intro
		padding-top 8rem
